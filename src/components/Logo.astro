<!-- Logo切换按钮 -->
<div class="logo-switcher mt-4 flex gap-2 justify-center">
  <button class="logo-btn w-8 h-8 rounded border border-neon-green/30 bg-neon-green/10 text-xs text-neon-green hover:bg-neon-green/20 transition-all" data-target="1">1</button>
  <button class="logo-btn w-8 h-8 rounded border border-neon-green/30 bg-black/50 text-xs text-gray-400 hover:bg-neon-green/20 transition-all" data-target="2">2</button>
  <button class="logo-btn w-8 h-8 rounded border border-neon-green/30 bg-black/50 text-xs text-gray-400 hover:bg-neon-green/20 transition-all" data-target="3">3</button>
  <button class="logo-btn w-8 h-8 rounded border border-neon-green/30 bg-black/50 text-xs text-gray-400 hover:bg-neon-green/20 transition-all" data-target="4">4</button>
</div>

<script>
  // Logo切换功能
  const logoOptions = document.querySelectorAll('[data-logo]');
  const logoButtons = document.querySelectorAll('.logo-btn');
  
  logoButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const target = (btn as HTMLElement).dataset.target;
      
      // 隐藏所有logo
      logoOptions.forEach(logo => logo.classList.add('hidden'));
      
      // 显示选中的logo
      const selectedLogo = document.querySelector(`[data-logo="${target}"]`);
      if (selectedLogo) {
        selectedLogo.classList.remove('hidden');
      }
      
      // 更新按钮状态
      logoButtons.forEach(b => {
        b.classList.remove('bg-neon-green/10', 'text-neon-green');
        b.classList.add('bg-black/50', 'text-gray-400');
      });
      
      btn.classList.remove('bg-black/50', 'text-gray-400');
      btn.classList.add('bg-neon-green/10', 'text-neon-green');
    });
  });
</script>

<style>
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .animate-pulse {
    animation: pulse 2s infinite;
  }
</style> 